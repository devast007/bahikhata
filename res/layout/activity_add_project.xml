<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddUsersActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.AddProjectActivity">

        <ScrollView
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <TextView
                            android:id="@+id/tv_project_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/automatically_project_id_will_be_generated"
                            android:textColor="@android:color/holo_red_dark" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_project_name"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_project_nick_name"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_subcategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_sub_category"
                            android:inputType="text"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_project_location"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_division"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_work_division"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_mb_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_mb_number"
                            android:inputType="text"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_head"
                            android:inputType="text"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_main_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/give_main_amount"
                            android:inputType="number"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fbfce7"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/maintenance_amount_for_5_years"
                            android:padding="4dp"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                        <EditText
                                android:id="@+id/et_project_1st_maintenance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@android:color/white"
                                android:hint="@string/first_year"
                                android:inputType="number"
                                android:padding="4dp"
                                android:textSize="16sp" />


                        <EditText
                                android:id="@+id/et_project_2nd_maintenance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_toRightOf="@id/et_project_1st_maintenance"
                                android:background="@android:color/white"
                                android:hint="@string/second_year"
                                android:inputType="number"
                                android:padding="4dp"
                                android:textSize="16sp" />

                        <EditText
                                android:id="@+id/et_project_3rd_maintenance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_toRightOf="@id/et_project_2nd_maintenance"
                                android:background="@android:color/white"
                                android:hint="@string/third_year"
                                android:inputType="number"
                                android:padding="4dp"
                                android:textSize="16sp" />

                        <EditText
                                android:id="@+id/et_project_4th_maintenance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_below="@id/et_project_3rd_maintenance"
                                android:background="@android:color/white"
                                android:hint="@string/fourth_year"
                                android:inputType="number"
                                android:padding="4dp"
                                android:textSize="16sp" />

                        <EditText
                                android:id="@+id/et_project_5th_maintenance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_below="@id/et_project_3rd_maintenance"
                                android:layout_toRightOf="@id/et_project_4th_maintenance"
                                android:background="@android:color/white"
                                android:hint="@string/fifth_year"
                                android:inputType="number"
                                android:padding="4dp"
                                android:textSize="16sp" />
                    </RelativeLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/project_start_date"
                            android:inputType="date"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_project_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/project_end_date"
                            android:inputType="date"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/remark"
                            android:maxLines="10"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                            android:id="@+id/et_google_drive_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/goolge_drive_link"
                            android:padding="4dp"
                            android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:gravity="bottom|center"
                        android:text="@string/save"
                        android:textSize="20sp"
                        android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>