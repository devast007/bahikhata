<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.StatementActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#F68077">

            <Button
                    android:id="@+id/btn_supplier_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="@string/select_supplier_or_service_provider"
                    android:padding="8dp"
                    android:textColor="@color/selector_text_color_state" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#F68077">

            <Button
                    android:id="@+id/btn_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/from_date"
                    android:maxLines="1"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/selector_text_color_state" />

            <Button
                    android:id="@+id/btn_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/to_date"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/selector_text_color_state" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_margin="50dp"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn_excel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/excel_file"
                    android:padding="8dp"
                    android:textColor="@color/selector_text_color_state" />

            <Button
                    android:id="@+id/btn_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/create_pdf"
                    android:padding="8dp"
                    android:textColor="@color/selector_text_color_state" />


        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>