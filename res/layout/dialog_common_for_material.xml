<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_project_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:padding="5dp">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#009688"
            android:layout_gravity="center"
            android:text="@string/add_new_service_type"
            android:maxLength="21"
            android:textColor="@android:color/black"
            android:textSize="16sp"

            android:textStyle="bold" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/yellow"
            android:orientation="horizontal"
            android:weightSum="4">

        <EditText
                android:id="@+id/et_add_new_service_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:inputType="textCapCharacters"
                android:hint="@string/add_new_service_type"
                android:maxLength="21"
                android:textColor="@android:color/black"
                android:textSize="16sp"

                android:textStyle="bold" />

        <ImageView
                android:id="@+id/iv_add_new_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#FBDCDC"
                android:foregroundGravity="right"
                android:gravity="right"
                android:src="@android:drawable/ic_menu_save"
                android:text="@string/accounts" />

    </LinearLayout>

    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:columnWidth="90dp"
            android:dividerHeight="5dp"
            android:gravity="right"
            android:listSelector="@android:drawable/list_selector_background"
            android:scrollbars="none" />


</LinearLayout>
