<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_project_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:backgroundTint="@color/colorPrimary"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:padding="5dp">

    <SearchView
            android:id="@+id/sv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/yellow"
            android:gravity="center"
            android:queryHint="@string/select_projects"
            android:textSize="18sp"
            android:textStyle="bold" />


    <ListView
            android:id="@+id/listview_project"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sv_dialog_title"
            android:divider="@android:drawable/divider_horizontal_dark"
            android:dividerHeight="1dp" />

    <Button
            android:id="@+id/btn_add_new_item"
            android:text="@string/add_new"
            android:layout_below="@id/listview_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

</RelativeLayout>
