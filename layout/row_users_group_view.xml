<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:weightSum="3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/give_user_name"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/accounts"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_only_text_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:singleLine="true"
                android:text="@string/personal"
                android:textStyle="bold|italic" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="4">

            <TextView
                    android:id="@+id/btn_transactions_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_sender"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:text="@string/sent_rupees"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/btn_transactions_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_receiver"
                    android:focusable="false"
                    android:text="@string/received_rupees"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tv_material"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_material"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="@string/Material"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />


            <TextView
                    android:id="@+id/tv_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_gst"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="@string/gst"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_only_text_master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:text="@string/master"
                android:textStyle="bold|italic" />

        <LinearLayout
                android:id="@+id/ll_master_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

            <TextView
                    android:id="@+id/btn_transactions_sent_master"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_sender"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:text="@string/sent_rupees"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/btn_transactions_received_master"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/selector_button_background_receiver"
                    android:focusable="false"
                    android:text="@string/received_rupees"
                    android:textColor="@color/selector_text_color_state"
                    android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>