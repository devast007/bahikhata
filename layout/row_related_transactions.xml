<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layoutDirection="ltr"
        android:orientation="vertical">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/sender_id"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_sender_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/sender_id"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/receiver_id"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_receiver_id"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/receiver_id"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/amount"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/amount"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/project_id_1"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_project_id"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/project_id_1"
                android:textSize="15sp"
                android:textStyle="bold"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_subcategory"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#018E07"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/transaction_date"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:text="@string/transaction_date"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/debited_to"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_debited_to"
                android:layout_width="0dp"
                android:layout_weight="2"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/credited_to"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_credited_to"
                android:layout_width="0dp"
                android:layout_weight="2"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/transaction_id"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_id"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/transaction_id"
                android:textIsSelectable="true"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/time_stamp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_time_stamp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/time_stamp"
                android:textIsSelectable="true"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/log_in_id"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_log_in_id"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/log_in_id"
                android:maxLines="1"
                
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="visible"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/remark"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/remark"
                android:paddingBottom="4dp"
                android:background="#f1eba1"
                android:textIsSelectable="true"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="2dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/round_off"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_transaction_round_off"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/amount"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/holo_green_dark"
            android:layout_height="3dp">

    </LinearLayout>

</LinearLayout>