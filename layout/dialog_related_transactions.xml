<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_project_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:backgroundTint="@color/colorPrimary"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/sv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/related_transactions"
            android:textColor="@android:color/black"
            android:queryHint="@string/select_projects"
            android:textSize="18sp"
            android:textStyle="bold" />


    <ListView
            android:id="@+id/listview_related_transactions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sv_dialog_title"
            android:dividerHeight="3dp" />


</RelativeLayout>
