<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddTransactionActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">




        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6"
                        android:background="#e9d4d4"
                        android:layout_margin="4dp">

                    <Button
                            android:id="@+id/tv_project_id"
                            android:layout_width="match_parent"
                            android:gravity="left|center"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:textColor="@color/selector_text_color_state"
                            android:background="@android:color/white"
                            android:hint="@string/work_only_hindi"
                            android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#e9d4d4">

                    <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:textColor="@color/selector_text_color_state"
                            android:inputType="number"
                            android:background="@android:color/white"
                            android:hint="@string/amount_only_hindi"
                            android:layout_height="wrap_content"/>


                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_marginRight="2dp"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:textColor="@android:color/black"
                        android:text="@string/date_only_hindi"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:background="#e9d4d4"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                >

                    <EditText
                            android:id="@+id/et_day"
                            android:layout_width="0dp"
                            android:textColor="@color/selector_text_color_state"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            android:padding="4dp"
                            android:maxLength="2"
                            android:inputType="number"
                            android:background="@android:color/white"
                            android:hint="@string/dd"
                            android:layout_height="match_parent"/>
                    <EditText
                            android:id="@+id/et_month"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:layout_marginLeft="2dp"
                            android:maxLength="2"
                            android:layout_marginRight="2dp"
                            android:hint="@string/mm"
                            android:textColor="@color/selector_text_color_state"
                            android:background="@android:color/white"
                            android:layout_height="match_parent"/>
                    <EditText android:id="@+id/et_year"
                              android:layout_width="0dp"
                              android:layout_weight="2"
                              android:layout_marginLeft="2dp"
                              android:padding="4dp"
                              android:maxLength="4"
                              android:inputType="number"
                              android:gravity="center"
                              android:hint="@string/yyyy"
                              android:textColor="@color/selector_text_color_state"
                              android:background="@android:color/white"
                              android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#e9d4d4">

                    <EditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:background="@android:color/white"
                            android:hint="@string/remark_only_hinid"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:text="@string/save"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>