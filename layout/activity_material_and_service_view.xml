<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MaterialAndServiceViewActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="4">

        <EditText
                android:id="@+id/et_add_service_material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:inputType="textCapCharacters"
                android:maxLength="21"
                android:hint="@string/add_new"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        <ImageView
                android:id="@+id/iv_save_service_material"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#FBDCDC"
                android:foregroundGravity="right"
                android:gravity="right"
                android:src="@android:drawable/ic_menu_save"
                android:text="@string/accounts" />

</LinearLayout>

<LinearLayout
        android:id="@+id/ll_expandable"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <ListView
            android:childDivider="@android:color/holo_green_dark"
            android:choiceMode="singleChoice"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1dp"
            android:id="@+id/lv_material_and_service"
            android:layoutDirection="rtl"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

    </ListView>

</LinearLayout>

        </LinearLayout>